
<h1 class="text-center">Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
     
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: 'text-white btn btn-primary' %> </td>
        <td>
        <% if can? :destroy, user %>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning' %>   
        <% end %>
        </td>
        <td>
        <% if can? :destroy, user %>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-white btn btn-danger' %>   
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
