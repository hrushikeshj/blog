
  <div class="card" >
  <img class="card-img" src="<%= url_for(article.image) %>" class="card-img-top" alt="<%= article.title %>">
  <div class="card-body">
    <h5 class="card-title">
     <%= article.title %>
    </h5>
      <h5 class="card-subtitle mb-2 text-muted">
        <%= article.topic %>
      </h5>
    <p class="card-text">
    <%= article.content[0, 80] %>
    </p>
    <% if can? :show, article %>
      <%= link_to 'Read More', article, class: 'text-white btn btn-primary' %>
    <% else %>
      <button type="button" class="text-white btn btn-primary private" data-toggle="popover" title="Private article" data-content="Login to read Private article">
        Read More
      </button>
    <%end%>    

    <% if can? :edit, article%>
      <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-warning' %>   
      <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } ,class: ' btn btn-outline-danger'%>
    <% end %>
  </div>
</div>